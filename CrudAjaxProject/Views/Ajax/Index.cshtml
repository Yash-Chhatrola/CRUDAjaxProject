<h1 class="text-center">Employee List</h1><hr />
<button class="btn btn-primary m-2 p-2" id="btnAddEmployee">Add Employee</button>
<div style="height: 500px;scroll-behavior: smooth;overflow-block: auto;}">
<table class="table table-bordered">
    <thead>
        <tr class="text-center" style="position: sticky;top: 0;z-index: 10;background-color:white">
                <th style="background-color:silver;">Id</th>
                <th style="background-color:silver;">Name</th>
                <th style="background-color:silver;">City</th>
                <th style="background-color:silver;">State</th>
                <th style="background-color:silver;">Salary</th>
                <th style="background-color:silver;">Opration</th>
        </tr>
    </thead>
    <tbody id="table_data" class="text-center"></tbody>
</table>
</div>

@* Add Employee Model *@
<div class="modal fade modal" id="EmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="EmployeeHeading">Add Employee</h1>
                <button class="btn-close btn btn-outline-danger" data-bs-dismiss="modal" aria-label="Close" title="close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="divid">
                        <label>Id:</label>
                        <input type="text" class="form-control" id="id" disabled="disabled"/>
                    </div>
                    <div class="form-group">
                        <label>Name:</label> 
                        <input type="text" class="form-control" placeholder="Enter Name" id="name" autocomplete="off"/>
                        <span class="text-danger d-none" id="errName">Name is required</span>
                    </div>
                    <div class="form-group">
                        <label>City:</label>
                        <input type="text" class="form-control" placeholder="Enter City" id="city" autocomplete="off" />
                        <span class="text-danger d-none" id="errCity">City is required</span>
                    </div>
                    <div class="form-group">
                        <label>State:</label>
                        <input type="text" class="form-control" placeholder="Enter State" id="state" autocomplete="off" />
                        <span class="text-danger d-none" id="errState">State is required</span>
                    </div>
                    <div class="form-group">
                        <label>Salary:</label>
                        <input type="number" class="form-control" placeholder="Enter Salary" id="salary" autocomplete="off" />
                        <span class="text-danger d-none" id="errSalary">Salary must be greater than 0 and required</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee()" id="AddEmployee">Save</button>
                <button class="btn btn-warning" onclick="UpdateEmployee()" style="display:none" id="UpdateEmployee">Update</button>
                <button class="btn btn-danger btn-default" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@* Delete Employee Model *@
<div class="modal fade modal" id="DeleteEmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Delete Employee</h1>
                <button class="btn-close btn btn-outline-danger" data-bs-dismiss="modal" aria-label="Close" title="close"></button>
            </div>
            <div class="modal-body">
                <h2>Are you sure you want to delete this record?</h2>
                <input type="hidden" id="deleteEmployeeId" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" onclick="Delete()">Delete</button>
                <button class="btn btn-danger btn-default" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

